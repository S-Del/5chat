{
  "appenders": {
    "console": {
      "type": "console"
    },
    "system": {
      "type": "dateFile",
      "filename": "../../logs/system/system.log",
      "pattern": "-yyyy-MM-dd"
    },
    "user": {
      "type": "dateFile",
      "filename": "../../logs/user/user.log",
      "pattern": "-yyyy-MM-dd"
    }
  },
  "categories": {
    "default": {
      "appenders": ["console"],
      "level": "all"
    },
    "system": {
      "appenders": ["console", "system"],
      "level": "all"
    },
    "user": {
      "appenders": ["user"],
      "level": "all"
    }
  }
}